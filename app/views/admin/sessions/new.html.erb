<div class="container">
 <div class="row">
  <p class="col-md-3 d-flex justify-content-end"><strong>管理者</strong>ログイン</p>
 
 <div class="col-md-9 d-flex flex-column justify-content-center">
  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
   <div class="field mt-5 mb-3">
    <%= f.label :email, "メールアドレス", class: "me-4" %>
    <%= f.email_field :email, autofocus: true, placeholder: "sample@example.com", autocomplete: "email", style: "width: 450px;" %>
   </div>

   <div class="field mb-5">
    <%= f.label :password, "パスワード", class: "me-5" %>
    <%= f.password_field :password, autocomplete: "current-password", style: "width: 450px;" %>
   </div>
 </div>
   <div class="actions d-flex ml-3">
    <%= f.submit "ログイン", class: "btn btn-primary", style: "width: 120px;" %>
   </div>
  <% end %>
 
 </div>
</div>
<%= render "admin/shared/links" %>
